#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int opc;
	int criterioDeOrdenamiento;

	//CREO ARRAY DE ESTRUCTURA
	eProducto Orquesta[TAM_ESTRUCTURA];

	//INICIALIAZO ARRAY DE ESTRUCTURA
	eProducto_Inicializar(Orquesta, TAM_ESTRUCTURA);

	//BUCLE DE MENU
	do {
		//MENU PRINT
		//Menu();
		printf("INGRESE OPCION: ");
		scanf("%d", &opc);

		//MENU SWITCH
		switch (opc)
		{
		case 0:
			/** PREGUNTAR SI DESEA SALIR */
			opc = 0;
			break;
		case 1:
			//ALTA
			if (eProducto_Alta(Orquesta, TAM_ESTRUCTURA)) {
				puts(" * Producto DADO DE ALTA EXITOSAMENTE");
			} else {
				puts(" * ERROR. SIN ESPACIO PARA ALMACENAR MAS Producto");
			}
			system("pause");
			break;
		case 2:
			//BAJA
			if (eProducto_Baja(Orquesta, TAM_ESTRUCTURA)) {
				puts("\n * BAJA DE Producto EXITOSA");
				eProducto_MostrarTodos(Orquesta, TAM_ESTRUCTURA);
			} else {
				puts("\n * BAJA DE Producto CANCELADA");
			}
			system("pause");
			break;
		case 3:
			//MODIFICACION
			if (eProducto_Modificacion(Orquesta, TAM_ESTRUCTURA)) {
				puts("\n * MODIFICACION DE Producto EXITOSA\n");
				eProducto_MostrarTodos(Orquesta, TAM_ESTRUCTURA);
			} else {
				puts("\n * MODIFICACION DE Producto CANCELADA");
			}
			system("pause");
			break;
		case 4:
			//LISTADO Producto
			if(eProducto_MostrarTodos(Orquesta, TAM_ESTRUCTURA)){
				system("pause");
			}else{
				puts("No hay nada para mostrar pa");
			}

			break;
		case 5:
			//ORDENAR Producto
			criterioDeOrdenamiento = -1; //PEDIR CRITERIO DE ORDENAMIENTO
			eProducto_Sort(Orquesta, TAM_ESTRUCTURA, criterioDeOrdenamiento);
			system("pause");
			break;
		}
	} while (opc != 0);

	puts("\n... FIN PROGRAMA");

	return 0;
}
